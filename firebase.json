{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/node_modules/**",
      "README.md",
      "package.json",
      "package-lock.json",
      ".gitignore",
      "vite.config.ts",
      "postcss.config.js",
      "tailwind.config.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
